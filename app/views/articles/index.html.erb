<h1 align="center">Listing all Articles</h1>

<% @articles.each do |data|%>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to data.title, article_path(data) %>
        </div>
        <div class="article-body">
          <%= truncate(data.description, length: 100) %>
          <div class="article-meta-details">
            <small> Created by: <%= data.user.username if data.user %>,
                                <%= time_ago_in_words(data.created_at) if data.created_at? %> ago,
                                last updated <%= time_ago_in_words(data.updated_at) if data.updated_at? %> ago </small>
          </div>
        </div>
        <div class="article-actions">
          <%= link_to "Edit ths article", edit_article_path(data), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this article", article_path(data), method: :delete,
                                            data: {confirm: "Are you sure you want to delete the article?"},
                                            class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
